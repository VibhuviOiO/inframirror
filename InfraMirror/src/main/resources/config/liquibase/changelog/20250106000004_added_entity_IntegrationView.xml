<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="20250106000004-1" author="jhipster">
        <createTable tableName="integration_view">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="integration_resource_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="view_type" type="varchar(30)" defaultValue="TABLE"/>
            <column name="title" type="varchar(150)"/>
            <column name="default_sort" type="varchar(100)"/>
            <column name="is_default" type="boolean" defaultValueBoolean="true"/>
            <column name="config" type="jsonb">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>

        <createIndex indexName="idx_integration_view_resource" tableName="integration_view">
            <column name="integration_resource_id"/>
        </createIndex>
        <createIndex indexName="idx_integration_view_default" tableName="integration_view">
            <column name="is_default"/>
        </createIndex>
    </changeSet>

    <changeSet id="20250106000004-2" author="jhipster">
        <addForeignKeyConstraint baseColumnNames="integration_resource_id"
                                 baseTableName="integration_view"
                                 constraintName="fk_integration_view_integration_resource_id"
                                 referencedColumnNames="id"
                                 referencedTableName="integration_resource"/>
    </changeSet>

</databaseChangeLog>
