<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <!--
        Added the entity MonitoredService.
    -->
    <changeSet id="20251205054618-1" author="jhipster">
        <createTable tableName="monitored_service">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(200)">
                <constraints nullable="false" />
            </column>
            <column name="description" type="varchar(500)">
                <constraints nullable="true" />
            </column>
            <column name="service_type" type="varchar(50)">
                <constraints nullable="false" />
            </column>
            <column name="environment" type="varchar(20)">
                <constraints nullable="false" />
            </column>
            <column name="monitoring_enabled" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="cluster_monitoring_enabled" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="interval_seconds" type="integer">
                <constraints nullable="false" />
            </column>
            <column name="timeout_ms" type="integer">
                <constraints nullable="false" />
            </column>
            <column name="retry_count" type="integer">
                <constraints nullable="false" />
            </column>
            <column name="latency_warning_ms" type="integer">
                <constraints nullable="true" />
            </column>
            <column name="latency_critical_ms" type="integer">
                <constraints nullable="true" />
            </column>
            <column name="advanced_config" type="${clobType}">
                <constraints nullable="true" />
            </column>
            <column name="is_active" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="created_at" type="${datetimeType}">
                <constraints nullable="true" />
            </column>
            <column name="updated_at" type="${datetimeType}">
                <constraints nullable="true" />
            </column>
            <column name="datacenter_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="search_vector" type="tsvector">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
        <dropDefaultValue tableName="monitored_service" columnName="created_at" columnDataType="${datetimeType}"/>
        <dropDefaultValue tableName="monitored_service" columnName="updated_at" columnDataType="${datetimeType}"/>
    </changeSet>

    <changeSet id="20251205054618-2" author="system">
        <sql>
            CREATE INDEX idx_monitored_service_search_vector
            ON monitored_service USING GIN (search_vector);
        </sql>
    </changeSet>

    <changeSet id="20251205054618-3" author="system">
        <sql splitStatements="false"><![CDATA[
            CREATE FUNCTION monitored_service_search_vector_update() RETURNS trigger AS $$
            BEGIN
              NEW.search_vector := to_tsvector('simple', unaccent(
                coalesce(NEW.name, '') || ' ' ||
                coalesce(NEW.description, '') || ' ' ||
                coalesce(NEW.service_type, '') || ' ' ||
                coalesce(NEW.environment, '')
              ));
              RETURN NEW;
            END;
            $$ LANGUAGE plpgsql;

            CREATE TRIGGER trg_monitored_service_search_vector
            BEFORE INSERT OR UPDATE ON monitored_service
            FOR EACH ROW
            EXECUTE FUNCTION monitored_service_search_vector_update();
        ]]></sql>
    </changeSet>

    <changeSet id="20251205054618-4" author="system">
        <sql>
            CREATE INDEX idx_monitored_service_name_trgm ON monitored_service USING GIN (name gin_trgm_ops);
            CREATE INDEX idx_monitored_service_description_trgm ON monitored_service USING GIN (description gin_trgm_ops);
            CREATE INDEX idx_monitored_service_service_type_trgm ON monitored_service USING GIN (service_type gin_trgm_ops);
            CREATE INDEX idx_monitored_service_environment_trgm ON monitored_service USING GIN (environment gin_trgm_ops);
        </sql>
    </changeSet>

    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here -->

    <!--
        Load sample data generated with Faker.js
        - This data can be easily edited using a CSV editor (or even MS Excel) and
          is located in the 'src/main/resources/config/liquibase/fake-data' directory
        - By default this data is applied when running with the JHipster 'dev' profile.
          This can be customized by adding or removing 'faker' in the 'spring.liquibase.contexts'
          Spring Boot configuration key.
    -->
    <changeSet id="20251205054618-1-data" author="jhipster" context="faker">
        <loadData
                  file="config/liquibase/fake-data/monitored_service.csv"
                  separator=";"
                  tableName="monitored_service"
                  usePreparedStatements="true">
            <column name="id" type="numeric"/>
            <column name="name" type="string"/>
            <column name="description" type="string"/>
            <column name="service_type" type="string"/>
            <column name="environment" type="string"/>
            <column name="monitoring_enabled" type="boolean"/>
            <column name="cluster_monitoring_enabled" type="boolean"/>
            <column name="interval_seconds" type="numeric"/>
            <column name="timeout_ms" type="numeric"/>
            <column name="retry_count" type="numeric"/>
            <column name="latency_warning_ms" type="numeric"/>
            <column name="latency_critical_ms" type="numeric"/>
            <column name="advanced_config" type="clob"/>
            <column name="is_active" type="boolean"/>
            <column name="created_at" type="date"/>
            <column name="updated_at" type="date"/>
            <!-- jhipster-needle-liquibase-add-loadcolumn - JHipster (and/or extensions) can add load columns here -->
        </loadData>
    </changeSet>
</databaseChangeLog>
